<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/wb_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D"
    android:padding="10dp"
    >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:id="@+id/crash_reason_tv" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:textColor="@color/reason_color"
                  android:textSize="15sp"/>
        <TextView android:id="@+id/crash_log_tv" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:textColor="@android:color/background_light"
                  android:textSize="13sp"/>

        <Button android:id="@+id/copy_btn" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:text="@string/copy"/>
    </LinearLayout>


</ScrollView>